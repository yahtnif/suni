{
  "name": "suni",
  "description": "Awesome.",
  "author": "Yahtnif <yahtnif@gmail.com>",
  "version": "0.0.1",
  "main": "dist/suni.js",
  "module": "dist/suni.es.js",
  "jsnext:main": "dist/suni.es.js",
  "browser": "dist/suni.min.js",
  "typings": "dist/src/index.d.ts",
  "repository": "yahtnif/suni",
  "homepage": "https://github.com/yahtnif/suni",
  "license": "MIT",
  "keywords": [
    "suni"
  ],
  "scripts": {
    "build": "rollup --c",
    "pass": "jest && rollup --c && size-limit",
    "test": "jest",
    "version": "rollup --c"
  },
  "lint-staged": {
    "{src|__tests__}/**/*.{js,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && jest",
      "pre-push": "jest && rollup --c && size-limit"
    }
  },
  "size-limit": [
    {
      "limit": "3 KB",
      "path": "dist/suni.js"
    }
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "engines": {
    "node": ">=8"
  },
  "files": [
    "dist/*.js",
    "dist/src/*.d.ts"
  ],
  "devDependencies": {
    "@types/jest": "^23.3.11",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "1.15.3",
    "rollup": "^1.0.0",
    "rollup-plugin-cleanup": "^3.1.0",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-filesize": "^5.0.1",
    "rollup-plugin-typescript2": "0.18.1",
    "size-limit": "^0.21.1",
    "ts-jest": "^23.10.5",
    "typescript": "3.2.2"
  }
}
